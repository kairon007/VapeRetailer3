                        android:background="@drawable/keyboard_light_blue_button_shape"
                        android:text="s"
                        android:textColor="#ffffff"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnD"
                        android:layout_width="80dp"
                        android:layout_height="80dp"

                        android:background="@drawable/keyboard_light_blue_button_shape"
                        android:text="d"
                        android:textColor="#ffffff"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnF"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/keyboard_light_blue_button_shape"
                        android:text="f"
                        android:textColor="#ffffff"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnG"
                        android:layout_width="80dp"
                        android:layout_height="80dp"

                        android:background="@drawable/keyboard_light_blue_button_shape"
                        android:text="g"
                        android:textColor="#ffffff"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnH"
                        android:layout_width="80dp"
