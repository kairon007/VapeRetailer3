<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.vapestore.vaperetailer.Vaping101Activity">
    <ProgressBar
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    <ImageView android:id="@+id/imvVaping"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_vaping101" />
    <Button
        android:id="@+id/btnHiddenSecurity"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:layout_weight="1"

        android:textColor="#FFFFFF"
        android:textSize="30sp" />
    <Button
        android:id="@+id/btnleftHiddenSecurity"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:layout_weight="1"

        android:textColor="#FFFFFF"
        android:textSize="30sp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="15dp">


            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="25dp"
                android:background="@null"
                android:layout_weight="1"

                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnSendToPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@null"
                android:layout_weight="1"

                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnSendToEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="45dp"
                android:background="@null"
                android:layout_weight="1"

                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
